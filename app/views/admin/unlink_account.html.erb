<%= content_for :title, 'Unlink Account - EDUGraphAPI' %>

<% content_for :user_login_info do %>
    <%= render 'common/user_login_info', userinfo: session[:current_user] %>
<% end %>

<% content_for :header_list do %>
  <%= render 'common/header_list' %>
<% end %>

<h2>Unlink Accounts</h2>
<h3>Are you sure you want to unlink the accounts?</h3>
<div>
  <hr />
  <dl class="dl-horizontal"></dl>
	<form action="/admin/unlink_account?account_id=<%= @account.id %>" method="post">
	<p>Local Account: <%= @account.email %></p>
  <p>Office 365 Account: <%= @account.o365_email %></p>
    <div class="form-actions no-color">
      <input type="submit" value="Unlink" class="btn btn-default" /> |
      <a href="/admin/linked_accounts">Back to List</a>
    </div>
	</form>
</div>
