<form action="/account/logoff" class="navbar-right" id="logoutForm" method="post">
    <div class="userinfo">
    <a href="javascript:void(0);" id="userinfolink">Logged in as: <%= is_admin? ? 'admin' : userinfo[:user_identify] %>. Hello <%= userinfo[:display_name] %> 
    <% if session[:current_user] && session[:current_user][:photo] %>
        <img src='<%= session[:current_user][:photo] %>'/>
    <% end %>
    </a>
        <span class="caret" id="caret"></span>
    </div>
    <div class="popupcontainer" id="userinfoContainer">
    <div class="popuserinfo">
        <div class="subitem">
            <a href="/manage/aboutme">About Me</a>
        </div>
        <div class="subitem">
            <a href="/link">Link</a>
        </div>
        <div class="subitem">
            <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
        </div>
    </div>
    </div>
</form>
